@model List<Vehicle>
@{
    ViewData["Title"] = "Vehicle Class";
}

<div class="d-flex flex-row flex-wrap">
    @if(Model.Count == 0)
    {
        <div>
            No vehicles found
        </div>
    }

    @foreach (var v in Model)
    {
        <div class="p-2">
            <h3>@v.Model.Name</h3>

            <a href="/vehicle/trimslevel/@v.ModelId">
                <img src="@v.ImageUrl" class="img-responsive" />
            </a>
        </div>
    }
</div>
